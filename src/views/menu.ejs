<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/css/navbar.css" rel="stylesheet">
    <link href="/css/menu.css" rel="stylesheet"> 
    <script src="/js/script.js" defer></script>

</head>
<body>
    <header>
        <nav>
          <img src="/img/logo.png" id="logo">
          <ul id="ul-nav">
            <li><a href="/">Hem</a></li>
            <li><a href="/meny">Meny</a></li>
            <li><a href="#">Beställ</a></li>
            <li><a href="#">Om oss</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Kundservice</a></li>
          </ul>
          <% if (user) { %>
            <div class="profile-container">
              <!-- Profilknapp -->
              <button id="profile-btn" class="profile-button">
                  <img class="avatar" src="/img/user-avatar.png" alt="User photo">
              </button>
      
              <!-- Dropdown-meny -->
              <div id="profile-dropdown" class="dropdown-menu hidden">
                  <div class="dropdown-header">
                      <p class="user-name"><%= user.username %></p>
                      <p class="user-email"><%= user.email %></p>
                  </div>
                  <ul class="dropdown-list">
                      <li><a href="#">Profil</a></li>
                      <li><a href="#">Mina beställningar</a></li>
                      <li><a href="#">Inställningar</a></li>
                  </ul>
                  <div class="dropdown-footer">
                      <a href="/logout" class="sign-out">Sign out</a>
                  </div>
              </div>
          </div>
      
          <% } else { %>
            <a href="/login">
              <button type="submit" id="login-btn">Logga in</button>
            </a>
          <% } %>
        </nav>
    </header>
    <div class="container">
        <!-- Category Filter Buttons -->
        <div class="top-container">
            <div class="filter-container">
                <button type="button" class="filter-btn active">All categories</button>
                <button type="button" class="filter-btn">Shoes</button>
                <button type="button" class="filter-btn">Bags</button>
                <button type="button" class="filter-btn">Electronics</button>
                <button type="button" class="filter-btn">Gaming</button>
            </div>
        </div>
        <div class="main-container">
            <div class="select-container">
                <button type="button" class="select-btn active">
                    <img src="/img/food-icon.png">
                    Vegetariskt
                </button>
                <button type="button" class="select-btn">
                    <img src="/img/food-icon.png">
                    Gatumat
                </button>
                <button type="button" class="select-btn">
                    <img src="/img/food-icon.png">
                    Husmanskost 
                </button>
                <button type="button" class="select-btn">
                    <img src="/img/food-icon.png">
                    Asiatisk 
                </button>
                <button type="button" class="select-btn">
                    <img src="/img/food-icon.png">
                    Skaldjur
                </button>
            </div>
            <!-- Image Gallery Grid -->
            <div class="gallery-grid">
                <div class="gallery-item">
                    <img src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image.jpg" alt="Product image">
                </div>
                <div class="gallery-item">
                    <img src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image-1.jpg" alt="Product image">
                </div>
                <div class="gallery-item">
                    <img src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image-2.jpg" alt="Product image">
                </div>
                <div class="gallery-item">
                    <img src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image-3.jpg" alt="Product image">
                </div>
                <div class="gallery-item">
                    <img src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image-4.jpg" alt="Product image">
                </div>
                <div class="gallery-item">
                    <img src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image-5.jpg" alt="Product image">
                </div>
            </div>
        </div>
    </div>

    <script>
        // Simple script to handle button active states
        document.addEventListener('DOMContentLoaded', function() {
            const filterButtons = document.querySelectorAll('.filter-btn');
            
            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                });
            });
        });
    </script>
</body>
</html>