<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Page</title>
    <link href="/css/profile.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="profile-card">
            <a href="/" class="back-link">Tillbaka</a>
            
            <div class="profile-header">
                <h2 class="username"><%= user.username %></h2>
                <p class="email"><%= user.email %></p>
            </div>
            
            <hr class="divider">
            
            <div class="info-grid">
                <div class="info-section">
                    <h3 class="info-title">Kontoinformation</h3>
                    <ul class="info-list">
                        <li class="info-item">
                            <span class="info-label">Användarnamn:</span>
                            <span class="info-value"><%= user.username %></span>
                        </li>
                        <li class="info-item">
                            <span class="info-label">Användare skapad:</span>
                            <span class="info-value"><%= formattedDate %></span>
                        </li>
                        <li class="info-item">
                            <span class="info-label">Senast inloggad:</span>
                            <span class="info-value">Ej tillgängligt</span>
                        </li>
                    </ul>
                </div>

                <div class="info-section">
                    <h3 class="info-title">Settings</h3>
                    <ul class="info-list">
                        <li class="info-item">
                            <span class="info-label">Integritet:</span>
                            <span class="info-value">Ej tillgängligt</span>
                        </li>
                        <li class="info-item">
                            <span class="info-label">Notifikationer:</span>
                            <span class="info-value">Ej tillgängligt</span>
                        </li>
                        <li class="info-item">
                            <span class="info-label">Språk:</span>
                            <span class="info-value">Ej tillgängligt</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>